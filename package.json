{
  "name": "cvstack",
  "version": "0.1.6",
  "description": "A simple CLI tool to help track job applications!",
  "module": "bin/cli.ts",
  "bin": {
    "cvstack": "dist/bin/cli.js",
    "cvs": "dist/bin/cli.js"
  },
  "scripts": {
    "dev": "BUN_ENV=development bun run bin/cvstack.ts",
    "app": "dist/bin/cli.js",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "prebuild": "rm -rf drizzle && bun db:generate",
    "build": "bun scripts/build.js",
    "rebuild": "rm -rf dist && bun run build",
    "postbuild": "sed -i '' '1s|^#!usr/bin/env|#!/usr/bin/env|' dist/bin/cli.js dist/bin/cvstack.js",
    "prepublishOnly": "bun run rebuild",
    "bundle:scraper": "cd cvstack-scraper/dist && zip -r ../../cvstack-scraper-bundle.zip cvstack-scraper"
  },
  "files": [
    "dist/bin/cli.js",
    "dist/bin/cvstack.js",
    "dist/drizzle"
  ],
  "engines": {
    "bun": ">=1.1.0"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/udbhavbalaji/cvstack.git"
  },
  "bugs": {
    "url": "https://github.com/udbhavbalaji/cvstack/issues"
  },
  "homepage": "https://github.com/udbhavbalaji/cvstack/issues",
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.5"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@t3-oss/env-core": "^0.13.8",
    "catchresult": "^0.1.0",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "clipboardy": "^5.0.0",
    "commander": "^14.0.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "enquirer": "^2.4.1",
    "neverthrow": "^8.2.0",
    "openai": "^6.3.0",
    "wrap-ansi": "^9.0.2",
    "yocto-spinner": "^1.0.0",
    "zod": "^4.1.12"
  }
}
