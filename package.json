{
  "name": "cvstack",
  "version": "0.0.1",
  "description": "A simple CLI tool to help track job applications!",
  "module": "index.ts",
  "bin": {
    "cvstack": "dist/bin/cli.js"
  },
  "scripts": {
    "dev": "BUN_ENV=development bun run bin/cli.ts",
    "app": "bun run bin/cli.ts",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "prebuild": "rm -rf drizzle && bun db:generate",
    "build": "bun scripts/build.ts",
    "rebuild": "bun unlink && rm -rf dist && bun run build && bun link",
    "patch": "sed -i '' '1s|^#!usr/bin/env|#!/usr/bin/env|' dist/bin/cli.js",
    "postbuild": "sed -i '' '1s|^#!usr/bin/env|#!/usr/bin/env|' dist/bin/cli.js",
    "scrape": "./dist/bin/cvstack-scraper/cvstack-scraper"
  },
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.5"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@t3-oss/env-core": "^0.13.8",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "clipboardy": "^5.0.0",
    "commander": "^14.0.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "enquirer": "^2.4.1",
    "neverthrow": "^8.2.0",
    "openai": "^6.3.0",
    "wrap-ansi": "^9.0.2",
    "yocto-spinner": "^1.0.0",
    "zod": "^4.1.12"
  }
}
